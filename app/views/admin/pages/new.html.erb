<% content_for :content_header do %>
    <section class="content-header">
      <h1>
        New Page
        <small>Add new Page</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> New Page</a></li>
      </ol>
    </section>
<% end %>

<% case @page_type %>
<% when 'CustomPage' %>
  <%= render 'custom_form' %>
<% when 'ContactPage' %>
  <%= render 'contact_form' %>
<% when 'GalleryPage' %>
  <%= render 'gallery_form' %>
<% when 'MenuPage' %>
  <%= render 'menu_form' %>
<% end %>

<%= link_to 'Back', admin_pages_path, {class: "btn btn-primary"} %>